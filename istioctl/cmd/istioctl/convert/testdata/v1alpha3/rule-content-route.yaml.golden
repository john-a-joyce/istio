apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  creationTimestamp: null
  name: c
  namespace: default
spec:
  hosts:
  - c
  http:
  - match:
    - headers:
        version:
          exact: v2
    route:
    - destination:
        name: c
        subset: version-v2
  - route:
    - destination:
        name: c
        subset: version-v1
      weight: 100
