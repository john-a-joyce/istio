apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  creationTimestamp: null
  name: c
  namespace: default
spec:
  hosts:
  - c
  http:
  - fault:
      abort:
        httpStatus: 503
        percent: 100
      delay:
        fixedDelay: 5.000s
        percent: 100
    match:
    - headers:
        version:
          exact: v2
    route:
    - destination:
        name: c
        subset: version-v2
  - route:
    - destination:
        name: c
        subset: version-v1
      weight: 100
